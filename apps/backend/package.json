{
  "name": "@ergo-type/backend",
  "version": "1.0.0",
  "description": "Backend API for ergo-type keyboard store",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:init-and-sync-db": "NODE_ENV=test tsx -r tsconfig-paths/register src/scripts/init-and-sync-test-database.ts",
    "test:drop-db": "NODE_ENV=test tsx -r tsconfig-paths/register src/scripts/drop-test-database.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:init": "tsx -r tsconfig-paths/register src/scripts/init-database.ts",
    "db:sync": "tsx -r tsconfig-paths/register src/scripts/sync-database.ts",
    "db:seed": "sequelize-cli db:seed:all",
    "db:drop": "tsx -r tsconfig-paths/register src/scripts/drop-database.ts",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:migrate:status": "sequelize-cli db:migrate:status",
    "db:create-migration": "sequelize-cli migration:generate",
    "db:seed:undo": "sequelize-cli db:seed:undo",
    "db:seed:undo:all": "sequelize-cli db:seed:undo:all",
    "db:create-seeder": "sequelize-cli seed:generate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "sequelize-cli": "^6.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.13",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
